%body

  %ul.nav.pull-left
    %li
  %a{href: "/spaces"}
    %span.glyphicon.glyphicon-arrow-left.black
      .black Back







  .row-fluid
    .col-lg-12
      %h1.page-header
        ="Spaces"
  -@spaces.each do |f|
    -@count = @count+1
    .col-md-6.portfolio-item
      #accordion.panel-group
        %h2.panel-title
          %h3=f[0]
          %br
          %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapse#{@count}"}
            .item=image_tag(f[1])
        .panel-collapse.collapse{:id => "collapse#{@count}"}
          .panel-body
            %label Description:
            %h5.website= link_to "See the Space!",  f[4]
            %p=f[3]
            %p="Address:"
            =f[2]
%h1 
  ="Powered by"
  %br
  =link_to image_tag("pivotdesk.png"), 'https://www.pivotdesk.com/'
