%body

  %ul.nav.nav-pills.pull-left
    %li
      %a{href: "/resources"}
        %span.glyphicon.glyphicon-arrow-left.black
    %li
      =link_to 'All', funding_path, :class => 'black'
    %li
      =link_to 'Venture Capital', funding_path(:filter => 'VC'), :class => 'black'
    %li
      =link_to 'Microfinance & Grants', funding_path(:filter => 'MFG'), :class => 'black'
    %li
      =link_to 'Angels, MicroVC & Seed Funding', funding_path(:filter => 'AMS'), :class => 'black'



.container-fluid
  .row-fluid
    .col-lg-12
      %h1.page-header
        Funding
  -@funding.each do |f|
    .col-md-6.portfolio-item
      %h3
        .black=link_to f.name, "#{f.website}"
      %img.img-responsive= link_to image_tag(f.photo), f.website
      %h4
        .black=f.description

  / /.container
