%h1 Create your profile
=form_for :position, url: positions_path do |f|
  .col-md-4.col-md-offset-4
    %div
      =f.label :about_me
      %br
      =f.text_field :description
    %div
      =f.label :skills
      %br
      =f.text_field :skills
      %br
    %div
      =f.label :interests
      %br
      =f.text_field :interests
    %div
      =f.label :major
      %br
      =f.text_field :categories
    %div
      =f.label :currently_looking
      %br
      =f.select :looking, [['Yes', true], ['No', false]]
    %div
      = f.submit "Add", :class => 'btn btn-primary'
