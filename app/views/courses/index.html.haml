.container-fluid
  .row-fluid
    .col-lg-12
      %h1.page-header
        Courses
        %small=@current_course
  -@courses.each do |f|
    -@count = @count+1
    .col-md-6.portfolio-item
      #accordion.panel-group
        .panel.panel-default
          .panel-heading
            %h2.panel-title
              %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapse#{@count}"}
                %h3=f.name
                %p=f.code
          .panel-collapse.collapse{:id => "collapse#{@count}"}
            .panel-body
              %label Description
              %p=f.description
