  %li
    %a{href: "/resources"}
      %span.glyphicon.glyphicon-arrow-left.black
  %li
    =link_to 'All', courses_path, :class => 'black'
  %li
    =link_to 'Engineering Courses', courses_path(:filter => 'Engineering'), :class => 'black'
  %li
    =link_to 'Music Courses', courses_path(:filter => 'Music'), :class => 'black'
  %li
    =link_to 'Business Courses', courses_path(:filter => 'Business'), :class => 'black'
  %li
    =link_to 'Entrepreneurship Certificate Courses', courses_path(:filter => 'Entrepreneurship'), :class => 'black'
  %li
    =link_to 'Law Courses', courses_path(:filter => 'Law'), :class => 'black'

.container-fluid
  .row-fluid
    .col-lg-12
      %h1.page-header
        = "#{@current_course} Courses"
  -@courses.each do |f|
    -@count = @count+1
    .col-md-6.portfolio-item
      #accordion.panel-group
      .panel.panel-default
        .panel-heading
        %h2.panel-title
          %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapse#{@count}"}
            %h3=f.name
            %p=f.code
        .panel-collapse.collapse{:id => "collapse#{@count}"}
          .panel-body
            %label.darken Description
            %p.darken=f.description











  