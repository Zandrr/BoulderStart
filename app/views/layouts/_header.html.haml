%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "Boulder Startups", root_path, id: "logo"
      %ul.nav.navbar-nav.navbar-right
        %li=link_to "Blogs", blog_path
        %li= link_to "Events", events_path
        %li= link_to "Resources", resources_path
        - if user_signed_in? 
          %li= link_to 'Logout', destroy_user_session_path, :method => :delete
          %li= link_to 'Profile', user_path(current_user.id)
        - elsif current_user.nil? or current_user.startup?
          %li= link_to 'Login', new_user_session_path
