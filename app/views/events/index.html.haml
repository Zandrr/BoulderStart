%body
%h1.center.page-header Upcoming Events
%ul.nav.nav-pills.navbar.pull-left
  %li
    %a{href: "/calendar"} 
      %h3.glyphicon.glyphicon-calendar.black 
      .black Full Calendar
  %li
    %a{href: "https://www.google.com/calendar/render?cid=boulderstartupscal@gmail.com"} 
      %h3.glyphicon.glyphicon-check.black 
      .black Subscribe

.container-fluid
  .row-fluid
    .col-lg-12
    -@events.each do |f|
      -@count = @count+1
      .col-md-6.portfolio-item
        #accordion.panel-group
        .panel.panel-default
          %h4.panel-title
            %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapse#{@count}"}
              %h3=f[0]
              %p=f[2].strftime("%A, %b %d at %I:%M %p")
        .panel-collapse.collapse{:id => "collapse#{@count}"}
          .panel-body
            %label Start Time:
            %p=f[2].strftime("%A, %b %d at %I:%M %p")
            %label End Time:
            %p=f[3]
            %label Location:
            %p=f[4]
            %label Description:
            %p=f[1]
