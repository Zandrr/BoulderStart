%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f|
  = devise_error_messages!
  %div
    = f.label :email
    %br/
    = f.email_field :email, :autofocus => true
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  %div
    = f.label :password
    %i (leave blank if you don't want to change it)
    %br/
    = f.password_field :password, :autocomplete => "off"
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %div
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password
  %div
    =f.label :name, "Change my name"
    %br
    = f.text_field :name, :class => 'form-control', :placeholder => 'Name'
  %div
    =f.label :website, "Change my website"
    %br
    = f.url_field :website, :class => 'form-control', :placeholder => 'Website'
  %div
    =f.label :twitter, "Change my Twitter handle"
    %br
    = f.text_field :twitter, :class => 'form-control', :placeholder => 'Twitter Handle'
  %div
    =f.label :linkedin, "Change my LinkedIn"
    %br
    = f.url_field :linkedin, :class => 'form-control', :placeholder => 'LinkedIn Url'
  %div
    =f.label :angellist, "Change my angellist"
    %br
    = f.url_field :angellist, :class => 'form-control', :placeholder => 'AngelList Profile URL'
    I'm a 
    = f.select :orgtype, [["Student", "Student"], ["Company", "Company"]], :prompt => 'Select One'
  %div
    =f.label :avatar, "Change my picture"
    %br
    = f.file_field :avatar, :class => 'form-control'
  %div= f.submit "Update"

%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}
= link_to "Back", :back
