%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .col-md-4.col-md-offset-4
    %div
      = f.label :email
      %br/
      = f.email_field :email, :autofocus => true, :class => 'form-control'
    %div
      = f.label :password
      %br/
      = f.password_field :password, :class => 'form-control'
    %div
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, :class => 'form-control'
    %div
      =f.label :website
      %br/
      =f.url_field :website, :class => 'form-control'
    %div
      =f.label :twitter
      %br/
      =f.url_field :twitter, :class => 'form-control'
    %div
      =f.label :linkedin
      %br/
      =f.url_field :linkedin, :class => 'form-control'
    %div
      =f.label :angel_list
      %br/
      =f.url_field :angellist, :class => 'form-control'
    %div
      =f.label :Are_you_a_student?
      %br/
      =f.collection_select :type, ['yes', 'no'], :to_s, :to_s, :include_blank => true, :class => 'form-control'
    %div= f.submit "Sign up", :class => 'btn btn-primary'
    = render "devise/shared/links"